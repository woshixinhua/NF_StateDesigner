<Window x:Class="NF_StateDesigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NF_StateDesigner"
        xmlns:item="clr-namespace:DesignerItem;assembly=DesignerItem"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Viewbox  Stretch="UniformToFill">
        <DockPanel Width="1200" Height="900" Background="#FFD8D8D8">

            <Grid DockPanel.Dock="Top" Height="40" Background="#dddddd">

                <Menu Background="#dddddd" FontSize="22" VerticalAlignment="Center" Margin="6, 0">
                    <MenuItem Header="文件" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Menu>
            </Grid>

            <item:DesignerCanvas Background="#FFF0F0F0" Width="1100" Height="750">
                <!--<item:State Canvas.Left="0" Canvas.Top="0">
                </item:State>-->
            </item:DesignerCanvas>

        </DockPanel>

    </Viewbox>
</Window>
